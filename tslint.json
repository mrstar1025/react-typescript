{
    "lintOptions": {
        "typeCheck": true
    },
    "defaultSeverity": "warning",
    "rules": {
        "quotemark": [true, "single", "avoid-escape"],
        "max-line-length": [false],
        "indent": ["error", 4],
        "only-arrow-functions": [false],
        // Disabled rules
        "typedef": [false]
    }
}
