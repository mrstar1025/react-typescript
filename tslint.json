{
    "lintOptions": {
        "typeCheck": true
    },
    "defaultSeverity": "warning",
    "rules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "max-line-length": [
            true,
            120
        ],
        "indent": [
            "error",
            4
        ],
        "only-arrow-functions": [
            false
        ],
        // Disabled rules
        "typedef": [
            false
        ]
    }
}